extends ../base
include ../mixins/video

block content 
  div.user-profile 
    a(href=`/user/${selectedUser._id}/edit`) Edit User 
      if selectedUser.avatarURL && !selectedUser.githubLogin
        img.profile-picture(src="/" + user.avatarURL)
      else 
         i.fa-solid.fa-user.fa-user_my-profile
      h1 #{selectedUser.username}

  main.home-body
    div.main-videos-holder.my-profile_main-videos-holder
      each video in selectedUser.userVideos
        +videos(video)